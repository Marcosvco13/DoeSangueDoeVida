@using Microsoft.AspNetCore.Identity
@using Projeto_Integrador.Areas.Identity.Data

@model Projeto_Integrador.Models.Models.CadDoacao

@inject UserManager<UsuarioModel> UserManager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CadDoacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select class="form-select" asp-for="IdLocal" asp-items="@ViewBag.IdLocal">
                    <option selected value="">Selecione um Local</option>
                </select>
            </div>

            <div class="form-group">
                <select class="form-select" asp-for="IdData" asp-items="@ViewBag.IdData">
                    <option selected value="">Selecione uma data</option>
                </select>
            </div>

            <div class="form-group">
                <input asp-for="IdStatus" class="form-control" value="1"  hidden/>
                <span asp-validation-for="IdStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="IdFichaUsuario" class="form-control" value="@UserManager.GetUserId(User)" hidden />
                <span asp-validation-for="IdFichaUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
