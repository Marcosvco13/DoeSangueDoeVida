@model Projeto_Integrador.Models.Models.CadDoacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Doação</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label">Código Doação</label>
                <input readonly asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdLocal" class="control-label">Local Doação</label>
                <select class="form-select" asp-for="IdLocal" asp-items="@ViewBag.IdLocal">
                    <option selected value="">Selecione um Local</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="IdData" class="control-label">Datas Disponíveis</label>
                <select class="form-select" asp-for="IdData" asp-items="@ViewBag.IdData">
                    <option selected value="">Selecione uma data</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="IdStatus" class="control-label">Status da Doação</label>
                <select class="form-select" asp-for="IdStatus" asp-items="@ViewBag.IdStatus">
                    <option selected value="">Modifique o Status</option>
                </select>
            </div>

            <div class="form-group">
                <input asp-for="IdFichaUsuario" class="form-control" hidden/>
                <span asp-validation-for="IdFichaUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
