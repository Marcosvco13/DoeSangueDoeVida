@model IEnumerable<Projeto_Integrador.ViewModel.FichaVM>

@{
    ViewData["Title"] = "Sua Ficha";
}

<h1>Ficha do doador</h1>

<p>
    <a asp-action="Create">Criar uma ficha</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipoSangue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataNasc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoSangue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataNasc)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.idUser }) |
                @Html.ActionLink("Veja Mais", "Details", new { id=item.idUser }) |
            </td>
        </tr>
}
    </tbody>
</table>
