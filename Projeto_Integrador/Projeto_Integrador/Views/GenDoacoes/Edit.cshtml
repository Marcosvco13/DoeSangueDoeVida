@model Projeto_Integrador.ViewModel.GenDoacoesVM

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="modal-header d-flex justify-content-between align-items-center bg-light">
    <h5 class="modal-title">Editar</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

@using (Html.BeginForm())
{
    <form asp-action="Edit" class="container mt-4 ">
        <div class="row m-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row-md-6">
                <div class="form-group">
                    <label asp-for="IdDoa" class="control-label"></label>
                    <input asp-for="IdDoa" class="form-control" />
                    <span asp-validation-for="IdDoa" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="status" class="control-label"></label>
                    <input asp-for="status" class="form-control" />
                    <span asp-validation-for="status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NomeDoador" class="control-label"></label>
                    <input asp-for="NomeDoador" class="form-control" />
                    <span asp-validation-for="NomeDoador" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataDisp" class="control-label"></label>
                    <input asp-for="DataDisp" class="form-control" />
                    <span asp-validation-for="DataDisp" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NomeLocal" class="control-label"></label>
                    <input asp-for="NomeLocal" class="form-control" />
                    <span asp-validation-for="NomeLocal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StatusDescricao" class="control-label"></label>
                    <input asp-for="StatusDescricao" class="form-control" />
                    <span asp-validation-for="StatusDescricao" class="text-danger"></span>
                </div>
            </div>
            
            <div class="modal-footer bg-light">
                <div class="ms-auto">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
    </form>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
