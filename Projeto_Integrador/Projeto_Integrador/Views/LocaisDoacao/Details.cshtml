@model Projeto_Integrador.ViewModel.LocalDoacaoVM

@{
    ViewData["Title"] = "Details";
    Layout = null;
}


<div class="modal-header d-flex justify-content-between align-items-center bg-light">
    <h5 class="modal-title">Detalhes</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="container mt-4">

    <div class="row m-0 ">

        <div class="row-md-6">
            <dt class="col-sm-5 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.id)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.id)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.nome)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.nome)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.email)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.email)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.telefone)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.telefone)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.rua)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.rua)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.num)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.num)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.comple)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.comple)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.cep)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.cep)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.bairro)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.bairro)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.cidade)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.cidade)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.estado)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.estado)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.ativo)
            </dt>

            <dd class="col-sm-9 align-middle">
                @if (Model.ativo == 1)
                {
                    <text>Sim</text>
                }
                else
                {
                    <text>Não</text>
                }
            </dd>
        </div>
        
    </div>

    <div class="modal-footer bg-light">
        <div class="ms-auto">
        </div>
    </div>
</div>

