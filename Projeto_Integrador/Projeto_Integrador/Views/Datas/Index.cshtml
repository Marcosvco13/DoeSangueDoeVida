@model IEnumerable<Projeto_Integrador.ViewModel.DataVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Datas</h1>

<p>
    <button class="btn btn-success create"><i class="glyphicon glyphicon-file">Criar</i></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomeLocal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomeLocal)
            </td>
            <td>
                    <button class="btn btn-success details" data-value="@item.id"><i class="glyphicon glyphicon-file">Detalhes</i></button>
                    <button class="btn btn-primary edit" data-value="@item.id"><i class="glyphicon glyphicon-edit">Editar</i></button>
                    <button class="btn btn-danger delete" data-value="@item.id"><i class="glyphicon glyphicon-edit">Excluir</i></button>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="modal fade bd-example-modal-lg" tabindex="-1" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="conteudoModal"></div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".details").click(function () {
                var id = $(this).data("value");
                $("#conteudoModal").load("/Datas/Details?id=" + id, function () {
                    $('#myModal').modal("show");
                })
            });

            $(".edit").click(function () {
                var id = $(this).data("value");
                $("#conteudoModal").load("/Datas/Edit?id=" + id, function () {
                    $("#myModal").modal('show');
                })
            });

            $(".delete").click(function () {
                var id = $(this).data("value");
                $("#conteudoModal").load("/Datas/Delete?id=" + id, function () {
                    $("#myModal").modal('show');
                })
            });

            $(".create").click(function () {
                var id = $(this).data("value");
                $("#conteudoModal").load("/Datas/Create", function () {
                    $("#myModal").modal('show');
                })
            });

        })
    </script>
}