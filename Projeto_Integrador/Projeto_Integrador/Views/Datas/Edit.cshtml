@model Projeto_Integrador.Models.Models.CadDataHoraDisp

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="modal-header d-flex justify-content-between align-items-center">
    <h5 class="modal-title">Editar</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>


<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <form asp-action="Edit">
                <div class="row m-0">
                    <div class="row-md-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select class="form-select" asp-for="IdLocal" asp-items="@ViewBag.IdLocais">
                                <option selected value="">Selecione um Cliente</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataDisp" class="control-label"></label>
                            <input asp-for="DataDisp" class="form-control" />
                            <span asp-validation-for="DataDisp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Disp" class="control-label"></label>
                            <input asp-for="Disp" class="form-control" />
                            <span asp-validation-for="Disp" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div class="ms-auto">
                            <a asp-action="Index">Back to List</a>
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
            </form>
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
