@model Projeto_Integrador.Models.Models.CadDataHoraDisp

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="modal-header d-flex justify-content-between align-items-center bg-light">
    <h5 class="modal-title">Editar</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

@using (Html.BeginForm())
{
    <form asp-action="Edit" class="container mt-4">

        <div class="row m-0">
            <div class="row-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Id" class="control-label" hidden></label>
                    <input asp-for="Id" class="form-control mb-2" hidden/>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdLocal" class="control-label mt-3">Local</label>
                    <select class="form-select mb-2" asp-for="IdLocal" asp-items="@ViewBag.IdLocais">
                        <option selected value="">Selecione um Cliente</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="DataDisp" class="control-label">Data</label>
                    <input asp-for="DataDisp" class="form-control mb-2" />
                    <span asp-validation-for="DataDisp" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="Disp" class="control-label">Disponivel?</label>
                <select asp-for="Disp" asp-items="Html.GetEnumSelectList<RespostaSimNao>()" class="form-control mb-5">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Disp" class="text-danger"></span>
            </div>


                <div class="modal-footer bg-light">
                    <div class="ms-auto">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
    </form>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
