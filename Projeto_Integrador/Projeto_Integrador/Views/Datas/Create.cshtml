@model Projeto_Integrador.ViewModel.DataVM

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="modal-header d-flex justify-content-between align-items-center bg-light">
    <h5 class="modal-title">Cadastrar Data Disponível</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>


<form asp-action="Create" class="container mt-4">


    <div class="row m-0">
        <div class="row-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control mb-2" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IDLocal" class="control-label">Nome Local</label>
                <select class="form-select mb-2" asp-for="IDLocal" asp-items="@ViewBag.IdLocais">
                    <option selected value="">Selecione um Local</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Disponivel" class="control-label"></label>
                <select asp-for="Disponivel" asp-items="Html.GetEnumSelectList<RespostaSimNao>()" class="form-control mb-5">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Disponivel" class="text-danger"></span>
            </div>

            <div class="modal-footer bg-light">
                <div class="ms-auto">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </div>

    </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
