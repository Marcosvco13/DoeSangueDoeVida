@model Projeto_Integrador.ViewModel.DataVM

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<div class="modal-header d-flex justify-content-between align-items-center bg-light">
    <h5 class="modal-title">Detalhes</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="container mt-4">
    <div class="row m-0">
        <div class="row-md-6">
            <dt class="col-sm-5 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.id)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.id)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.nomeLocal)
            </dt>
            <dd class="col-sm-10 align-middle">
                @Html.DisplayFor(model => model.nomeLocal)
            </dd>
            <dt class="col-sm-2 mb-1 align-middle">
                @Html.DisplayNameFor(model => model.Disponivel)
            </dt>
            <dd class="col-sm-5 align-middle">
                @if (Model.Disponivel == 0)
                {
                    <span class="badge badge-success rounded-pill d-inline" style="background: #cff6dd; color: #1fa750">Sim</span>
                }
                else
                {
                    <span class="badge badge-success rounded-pill d-inline" style="background: #fdf5dd; color: #cfa00c">Não</span>
                }
            </dd>
        </div>
    </div>

    <div class="modal-footer bg-light">
        <div class="ms-auto">
        </div>
    </div>
</div>
